{
  "name": "majestic-launcher",
  "version": "0.1.0",
  "description": "Custom Minecraft 1.20.1 Forge launcher with auto mod sync",
  "main": "src/main/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "cross-env NODE_ENV=development electron .",
    "package": "node scripts/create-release.js",
    "dist": "electron-builder",
    "lint": "echo 'Add linter of your choice'"
  },
  "dependencies": {
    "adm-zip": "^0.5.12",
    "electron-store": "^9.0.0",
    "minecraft-launcher-core": "^2.3.0",
    "node-fetch": "^2.6.12"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "electron": "^31.3.0",
    "electron-builder": "^26.0.12"
  },
  "build": {
    "appId": "com.leolauncher.app",
    "productName": "LeoLauncher",
    "files": [
      "src/**/*",
      "config/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "build"
    },
    "extraMetadata": {
      "name": "leo-launcher"
    },
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "build/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "build"
    },
    "nsis": {
      "perMachine": true,
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
